@page "/anleger"
@using StundenPlaner.Data;

<PageTitle>BenutzerAnleger</PageTitle>

<body>
    <h1>Student Information Form</h1>
    <form method="post">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" @bind="model.Name" required>
        </div>
        <div>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" @bind="model.Adress" required>
        </div>
        <div>
            <label for="class">Class:</label>
            <input type="text" id="class" name="class" @bind="model.KlasseID" required>
        </div>
        <button type="submit" @onclick="model.legeEnität">Submit</button>
        <button onclick=""> hole die infos </button>
    </form>
    <div>
        <label for="class">Class:</label>
        <input type="text" @bind="model.infos" required>
    </div>
</body>


@code {
    private BenutzerAnlegerModel model  = new();
}
